<mvc:View
	controllerName="com.sap.apm.uiTsTest.uiTsTest.controller.Main"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc">

	<Page title="UI5 Parent View for Fundamentals NGX App">
        <content>
            <Panel headerText="Start" height="100%">
                <l:VerticalLayout>
                    <l:content>
                        <Button text="Start Angular Application" press="startAngularApp"/>
                        <Button text="Send message to Angular Application" press="sendByEventBus"/>
                        <Label text="Message from Angular" />
                        <Text text="{/text}" />
                        <core:HTML id="angularDiv" />
                    </l:content>
                </l:VerticalLayout>
            </Panel>
        </content>
    </Page>

</mvc:View>